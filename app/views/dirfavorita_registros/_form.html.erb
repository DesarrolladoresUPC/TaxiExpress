<%= simple_form_for(@dirfavorita_registro) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nombre %>
    <%= f.input :dirfavorita, :label => "Direccion Favorita"%>
    <%= f.input :distrito %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
