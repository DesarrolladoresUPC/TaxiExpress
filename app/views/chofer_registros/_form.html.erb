<%= simple_form_for(@chofer_registro) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :codigo %>
    <%= f.input :nombres %>
    <%= f.input :apellidos %>
    <%= f.input :telefono %>
    <%= f.input :distrito %>
    <%= f.input :estado %>
    <%= f.input :cuenta %>
    <%= f.input :placa %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
